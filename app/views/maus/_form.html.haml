= form_for(@mau) do |f|
  - if @mau.errors.any?
    #error_explanation
      %h2
        = pluralize(@mau.errors.count, "error")
        prohibited this mau from being saved:
      %ul
        - @mau.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'span12'
  .form-actions
    = link_to maus_path, class: 'btn' do
      %i.icon-arrow-left
      Back
    = f.submit class: 'btn btn-primary pull-right'
