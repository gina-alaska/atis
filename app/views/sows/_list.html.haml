.sow_list
  - sows.each do |sow|
    .sow
      .content{ "data-target" => "#sow_body_#{sow.id}", "data-toggle"=>"collapse" }
        %h4.title
          = sow.project_title
          %small= "Last updated: #{sow.updated_at.strftime('%F')}"
        .status.alert{class: sow_status_class(sow)}
          = sow.state.humanize
        %p.submitter= " - #{sow.first_name} #{sow.last_name} <#{sow.email}>"
        %p.description= sow.statement_of_work
          
        .collapse{id: "sow_body_#{sow.id}"}
          %dl.dl-horizontal
            = render 'sows/submitter', sow: sow
            = render 'sows/status', sow: sow
        
            = render 'sows/dates', sow: sow
            = render 'sows/project_details', sow: sow
      
        .ellipsis 
          %i.icon-chevron-down
        
      .actions
        = link_to 'View', sow_path(sow), class: 'btn' 

        = link_to 'Open Award', sow.award, class: 'btn btn-info' if current_user.has_role?(:admin) and !sow.award.nil?
        
        - if sow.owner == current_user and sow.can_submit?
          = link_to 'Submit for review', submit_sow_path(sow), method: 'POST', class: 'btn btn-primary'
          
        - if sow.can_review? and current_user.has_role?(:reviewer) and !sow.accepted?
          = link_to 'Review', review_sow_path(sow), method: 'POST', class: 'btn btn-primary'
        
