= form_for(@discipline, html: { class: 'form-horizontal' }) do |f|
  - if @discipline.errors.any?
    #error_explanation
      %h2
        = pluralize(@discipline.errors.count, "error")
        prohibited this discipline from being saved:
      %ul
        - @discipline.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'span12'
  .actions.pull-right
    = link_to disciplines_path, class: 'btn' do
      %i.icon-arrow-left
      Back to list
    = f.submit class: 'btn btn-primary'
