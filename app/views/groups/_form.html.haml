= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :acronym
    %br/
    = f.text_field :acronym
  .field
    = f.label :fiscal_coordinator_id
    %br/
    = f.number_field :fiscal_coordinator_id
  .field
    = f.label :director_id
    %br/
    = f.number_field :director_id
  .actions
    = f.submit
