<h1>Listing awards</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>Title</th>
    <th>Description</th>
    <th>Group</th>
    <th>Pi</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @awards.each do |award| %>
  <tr>
    <td><%= award.slug %></td>
    <td><%= award.title %></td>
    <td><%= award.description %></td>
    <td><%= award.group_id %></td>
    <td><%= award.pi_id %></td>
    <td><%= link_to 'Show', award %></td>
    <td><%= link_to 'Edit', edit_award_path(award) %></td>
    <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

