= form_for(@award) do |f|
  - if @award.errors.any?
    #error_explanation
      %h2
        = pluralize(@award.errors.count, "error")
        prohibited this award from being saved:
      %ul
        - @award.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :slug
    %br/
    = f.text_field :slug
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :group_id
    %br/
    = f.number_field :group_id
  .field
    = f.label :pi_id
    %br/
    = f.number_field :pi_id
  .actions
    = f.submit
